				});
			},
			undo: function(){
				iOSKeyboardFix.targetElem.css({'position': 'fixed', 'top': 0, 'overflow': 'visible'});
			}
		};

		function facebox_ipad_fix(){
			$(document).bind('reveal.facebox', function() {
